---
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
  breadcrumbs?: Array<{ name: string; url: string }>;
  schemaType?: "LocalBusiness" | "Article" | "Course" | "Service";
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {
  title,
  description,
  keywords,
  image = "/SunCity-OG-image.png",
  breadcrumbs = [],
  schemaType = "LocalBusiness",
} = Astro.props;

// Enhanced Schema.org structured data
const baseOrganization = {
  name: "Sun City Aviation Academy",
  alternateName: ["Sun City Aviation", "SCAA"],
  description:
    "Professional pilot training and aviation education in South Florida",
  url: new URL("/", Astro.site).toString(),
  logo: new URL("/sun-city-white-text-logo.webp", Astro.site).toString(),
  image: new URL(image, Astro.site).toString(),
  telephone: "+1-754-423-2159",
  email: "info@suncityaviation.com",
  foundingDate: "2020",
  address: {
    "@type": "PostalAddress",
    streetAddress: "7201 S Airport Rd #504A",
    addressLocality: "Pembroke Pines",
    addressRegion: "FL",
    postalCode: "33023",
    addressCountry: "US",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: "25.995",
    longitude: "-80.241",
  },
  hasMap: "https://maps.app.goo.gl/yugDmTfMfqUNYQ7G7",
  areaServed: [
    {
      "@type": "State",
      name: "Florida",
    },
    {
      "@type": "City",
      name: "Miami",
    },
    {
      "@type": "City",
      name: "Fort Lauderdale",
    },
    {
      "@type": "City",
      name: "Pembroke Pines",
    },
  ],
  contactPoint: [
    {
      "@type": "ContactPoint",
      telephone: "+1-754-423-2159",
      contactType: "customer service",
      areaServed: "US",
      availableLanguage: ["en", "English"],
      hoursAvailable: {
        "@type": "OpeningHoursSpecification",
        dayOfWeek: [
          "Monday",
          "Tuesday",
          "Wednesday",
          "Thursday",
          "Friday",
          "Saturday",
          "Sunday",
        ],
        opens: "08:00",
        closes: "20:00",
      },
    },
  ],
  sameAs: [
    "https://www.facebook.com/SunCityAviationAcademy",
    "https://www.instagram.com/suncity_aviation/",
    "https://www.linkedin.com/company/sun-city-aviation-academy/",
    "https://www.youtube.com/@suncityaviation/",
  ],
};

let structuredData = {};

if (schemaType === "LocalBusiness") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "@id": new URL("/", Astro.site).toString() + "#organization",
    additionalType: ["EducationalOrganization", "School"],
    ...baseOrganization,
    priceRange: "$$-$$$",
    paymentAccepted: "Cash, Credit Card, Check, Financing",
    currenciesAccepted: "USD",
    aggregateRating: {
      "@type": "AggregateRating",
      ratingValue: "4.8",
      reviewCount: "150",
      bestRating: "5",
      worstRating: "1",
    },
    hasOfferCatalog: {
      "@type": "OfferCatalog",
      name: "Flight Training Programs",
      itemListElement: [
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "Course",
            name: "Private Pilot License Training",
            description: "Comprehensive private pilot certification program",
            provider: baseOrganization.name,
          },
        },
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "Course",
            name: "Commercial Pilot Training",
            description: "Professional commercial pilot certification",
            provider: baseOrganization.name,
          },
        },
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "Course",
            name: "Instrument Rating",
            description: "Instrument flight rules certification",
            provider: baseOrganization.name,
          },
        },
      ],
    },
  };
} else if (schemaType === "Course") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "Course",
    name: title,
    description: description,
    provider: baseOrganization,
    url: Astro.url.toString(),
    image: new URL(image, Astro.site).toString(),
    courseMode: ["In-person", "Blended"],
    educationalLevel: "Professional",
    teaches: keywords.split(", ").slice(0, 5),
    isAccessibleForFree: false,
    hasCourseInstance: {
      "@type": "CourseInstance",
      courseMode: "In-person",
      location: baseOrganization.address,
      instructor: {
        "@type": "Organization",
        name: baseOrganization.name,
      },
    },
  };
} else if (schemaType === "Service") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "Service",
    name: title,
    description: description,
    provider: baseOrganization,
    url: Astro.url.toString(),
    image: new URL(image, Astro.site).toString(),
    areaServed: baseOrganization.areaServed,
    serviceType: "Aviation Training",
    category: "Education",
  };
}

// Breadcrumb structured data
const breadcrumbSchema =
  breadcrumbs.length > 0
    ? {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        itemListElement: [
          {
            "@type": "ListItem",
            position: 1,
            name: "Home",
            item: new URL("/", Astro.site).toString(),
          },
          ...breadcrumbs.map((crumb, index) => ({
            "@type": "ListItem",
            position: index + 2,
            name: crumb.name,
            item: new URL(crumb.url, Astro.site).toString(),
          })),
        ],
      }
    : null;

const jsonLD = JSON.stringify(structuredData);
const breadcrumbLD = breadcrumbSchema ? JSON.stringify(breadcrumbSchema) : null;
