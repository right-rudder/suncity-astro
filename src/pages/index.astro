---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeaderScreen from "../components/HeaderScreen.astro";
import ImageComp from "../components/ImageComp.astro";
import ProgramSwiper from "../components/ProgramSwiper.astro";
import ContentSplit from "../components/ContentSplit.astro";
import CTAColor from "../components/CTAColor.astro";
import Testimonials from "../components/Testimonials.astro";
import ContentCTA from "../components/ContentCTA.astro";
import homePage from "../data/homePage";
import programsSwiper from "../data/programSwiper";
import BlogFeed from "../components/BlogFeed.astro";
import BookCTA from "../components/BookCTA.astro";
import bookCTA from "../data/book-cta";

const { data } = homePage;
---

<BaseLayout
  siteTitle={data.pageTitle}
  siteDescription={data.pageDescription}
  keywords={data.pageKeywords}
>
  <!-- HEADER -->
  <HeaderScreen content={data.header} />

  <section
    id="awards"
    class="bg-black py-20 lg:py-12 flex flex-wrap justify-center items-center gap-y-14 lg:gap-y-0"
  >
    <a
      href="https://issuu.com/ourcityweston/docs/bopin_2024"
      target="_blank"
      class="flex flex-col items-center group w-full lg:w-1/4"
    >
      <ImageComp
        imagePath="/src/assets/best-of-pembroke-pines-flight-school-is-sun-city-aviation-academy.webp"
        imageAlt="Best of Pembroke Pines Flight School is Sun City Aviation Academy"
        styles="max-h-28 w-auto object-contain group-hover:scale-110 group-hover:brightness-110 duration-300 ease-out"
      />
      <h3
        class="text-muted-300 text-center mt-6 font-light text-lg tracking-wide leading-tight px-3 group-hover:text-white duration-300 ease-out"
      >
        2024 Voted <br /><strong
          class="text-accent-300 uppercase group-hover:font-bold duration-700 ease-out"
          >BEST Flight School</strong
        ><br />in Pembroke Pines
      </h3>
    </a>
    <a
      href="/blog/sun-city-aviation-academy-is-2025-aopa-flight-training-experience-award-winners/"
      target="_blank"
      class="flex flex-col items-center group w-full lg:w-1/4"
    >
      <ImageComp
        imagePath="/src/assets/2025_FTExperience_BFS_Southern_FINAL.png"
        imageAlt="AOPA Flight Training Experience Award Winners 2025 badge"
        styles="max-h-32 w-auto object-contain group-hover:scale-110 group-hover:brightness-110 duration-300 ease-out"
      />
      <h3
        class="text-muted-300 text-center mt-6 font-light text-lg tracking-wide leading-tight px-3 group-hover:text-white duration-300 ease-out"
      >
        2025 AOPA Flight Training<br /><strong
          class="text-accent-300 uppercase group-hover:font-bold duration-700 ease-out"
        >
          Experience Award Winners</strong
        ><br />Southern Region
      </h3>
    </a>
    <a
      href="/blog/our-own-cara-ming-earns-distinguished-flight-instructor-award/"
      target="_blank"
      class="flex flex-col items-center group w-full lg:w-1/4"
    >
      <ImageComp
        imagePath="/src/assets/2025_FTExperience_BFS_CFI.png"
        imageAlt="AOPA Flight Training Experience Award Distinguished Flight Instructor 2025 badge"
        styles="max-h-36 w-auto object-contain group-hover:scale-110 group-hover:brightness-110 duration-300 ease-out"
      />
      <h3
        class="text-muted-300 text-center mt-6 font-light text-lg tracking-wide leading-tight px-3 group-hover:text-white duration-300 ease-out"
      >
        2025 AOPA Distinguished CFI<br /><strong
          class="text-accent-300 uppercase group-hover:font-bold duration-700 ease-out"
        >
          Experience Award Winner</strong
        >
      </h3>
    </a>
  </section>

  <ProgramSwiper content={programsSwiper} />
  <ContentSplit content={data.whySuncity} />
  <ContentCTA content={data.quizCTA} />
  <Testimonials content={data.testimonials} />
  <BookCTA content={bookCTA} />
  <BlogFeed data={data.blogfeed} />
  <CTAColor content={data.flyWithUsCTA} />
  <script src="../scripts/creativeSwiper.js"></script>
</BaseLayout>
