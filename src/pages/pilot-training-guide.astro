import ContentCTA from "../components/ContentCTA.astro";
import pilotTrainingGuide from "../data/pilot-training-guide";
import BentoDark from "../components/BentoDark.astro";

const { data } = pilotTrainingGuide;
---

<BaseLayout
  siteTitle={data.pageTitle}
  siteDescription={data.pageDescription}
  keywords={data.pageKeywords}
>
